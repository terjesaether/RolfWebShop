@model IEnumerable<RolfWebShop.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Velg kategorier</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var cat in Model) {
    <tr>
        <td>
            <p>@Html.ActionLink(cat.Name, "Browse", "Store", new { id = cat.CategoryId }, null)</p>
        </td>
        
    </tr>
}

</table>
